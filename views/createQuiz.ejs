<%- include('partials/_doc') %>

<body id="main-body">
  <%- include('partials/_header') %>
  <!-- Top nav bar (fixed) -->
  <div class="spacer">
    &nbsp;
  </div>

  <main id="main_container">

    <div class="container">
      <form class="create_quiz" action="/createQuiz" method="POST">
        <div class="form-group">
          <label for="questionArea">Your Question Here</label>
          <textarea name="question" class="form-control" id="inputQuestion" rows="3"></textarea>
        </div>
        <div class="form-group">
          <label for="InputAnswer1">Answer 1</label>
          <input type="text" name="answer1" class="form-control" id="InputAnswer1">
        </div>
        <div class="form-group">
          <label for="InputAnswer2">Answer 2</label>
          <input type="text" name="answer2" class="form-control" id="InputAnswer2">
        </div>
        <div class="form-group">
          <label for="InputAnswer3">Answer 3</label>
          <input type="text" name="answer3" class="form-control" id="InputAnswer3">
        </div>
        <div class="form-group">
          <label for="InputAnswer4">Answer 4</label>
          <input type="text" name="answer4" class="form-control" id="InputAnswer4">
        </div>
        <label for="quantity">Correct Answer (between 1 and 4):</label>
        <input type="number" id="quantity" name="result" min="1" max="4">

        <button type="submit" class="btn btn-primary" id="create-btn">ADD QUESTION</button>
      </form>
    </div>

    <div id="question-container"></div>


  </main>

  <%- include('partials/_footer2') %>

</body>

</html>
